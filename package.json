{
  "name": "memon-app",
  "description": "Memon is the best way to memorize something such as English words. Memory On your Memo.",
  "homepage": "https://memon.cards",
  "private": true,
  "version": "0.3.7 Beta",
  "type": "module",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/wing-0902/memon_app.git"
  },
  "author": {
    "name": "Tsubasa Terasawa",
    "email": "wing@me.wing.osaka",
    "url": "https://wing.osaka/"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "pnpm listLicense && vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "listLicense:All:Repo": "pnpm exec pnpm-licenses generate-disclaimer -o THIRD_PARTY_ALL.txt",
    "listLicense:All:Site": "pnpm exec pnpm-licenses generate-disclaimer -o static/THIRD_PARTY/ALL.txt",
    "listLicense:Prod:Repo": "pnpm exec pnpm-licenses generate-disclaimer --prod -o THIRD_PARTY_PROD.txt",
    "listLicense:Prod:Site": "pnpm exec pnpm-licenses generate-disclaimer --prod -o static/THIRD_PARTY/PROD.txt",
    "listLicense": "pnpm listLicense:All:Repo && pnpm listLicense:All:Site && pnpm listLicense:Prod:Repo && pnpm listLicense:Prod:Site"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.1",
    "@eslint/js": "^9.39.2",
    "@quantco/pnpm-licenses": "^2.2.3",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/enhanced-img": "^0.9.3",
    "@sveltejs/kit": "^2.50.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/node": "^24.10.10",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^16.5.0",
    "mdsvex": "^0.12.6",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "sass": "^1.97.3",
    "svelte": "^5.49.2",
    "svelte-check": "^4.3.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@fontsource/material-icons-round": "^5.2.6",
    "@fontsource/zen-kaku-gothic-new": "^5.2.7",
    "@fontsource/zen-maru-gothic": "^5.2.8",
    "localforage": "^1.10.0"
  }
}
